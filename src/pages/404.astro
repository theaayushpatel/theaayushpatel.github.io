---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout>
  <Header />
  <main class="not-found">
    <div class="container">
      <h1 class="not-found-title">404.<span class="cursor">_</span></h1>
      <p class="not-found-message">Sorry, the page you are looking for does not exist.</p>
      <a href="/" class="not-found-link">Go back home</a>
    </div>
  </main>
  <Footer />
  <style>
    .not-found {
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      text-align: center;
    }
    .not-found-title {
      font-size: 6rem;
      font-weight: bold;
      margin-bottom: 1rem;
      color: #232323;
    }
    .not-found-message {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      color: #555;
    }
    .not-found-link {
      display: inline-block;
      padding: 0.75rem 2rem;
      background: #232323;
      color: #fff;
      border-radius: 2rem;
      text-decoration: none;
      font-size: 1.1rem;
      transition: background 0.2s;
    }
    .not-found-link:hover {
      background: #000;
    }
    .container {
      width: 100%;
      max-width: 500px;
      margin: 0 auto;
    }
    .cursor {
  display: inline-block;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}
  </style>
</MainLayout>